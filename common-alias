# more info for common commands
alias mkdir='mkdir -v'
alias mv='mv -v'
alias cp='cp -v'
alias rm='rm -v'
alias ln='ln -v'

# support for exa
if which exa > /dev/null ; then
  alias e='exa -F'
  alias el='exa -F -l --time-style=long-iso'
fi

# enable bd script
alias bd=". ~/bin/bd -s"

# alias for kdiff
alias kdiff="/Applications/kdiff3.app/Contents/MacOS/kdiff3"

# Use MacHg bundled command line hg program.
#alias hg='/Applications/MacHg.app/Contents/Resources/localhg'
# Use virtualenv created hg program.
alias hg='~/hgenv/bin/hg'

# Use MacVim bundled vim if possibile.
if [ -x ~/bin/mvim  ]; then
  alias vim="~/bin/mvim -v"
fi
